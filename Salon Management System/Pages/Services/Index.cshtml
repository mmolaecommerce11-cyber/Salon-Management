@page
@model Salon_Management_System.Pages.Services.IndexModel

@{
    ViewData["Title"] = "Services";
}
<!-- Banner -->
<section class="services-banner">
    <div class="services-banner-overlay"></div>
    <div class="services-banner-content">
        <h1>Our Services</h1>
        <p>Premium grooming & styling, tailored just for you</p>
    </div>
</section>

<div class="container py-5">

    <!-- Header -->
    <div class="mb-5 text-center">
        <h1 class="fw-bold display-6">Our Services</h1>
        <p class="text-muted mt-2 mx-auto" style="max-width:520px">
            Discover premium salon services tailored for you.
        </p>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-5 border-0">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">

                <div class="col-md-5">
                    <label class="form-label text-muted">Search</label>
                    <input type="text"
                           name="Search"
                           value="@Model.Search"
                           class="form-control form-control-lg"
                           placeholder="Search for a service..." />
                </div>

                <div class="col-md-4">
                    <label class="form-label text-muted">Category</label>
                    <select name="Category" class="form-select form-select-lg">
                        <option value="">All Categories</option>
                        <option value="Men" selected="@(Model.Category == "Men")">Men</option>
                        <option value="Women" selected="@(Model.Category == "Women")">Women</option>
                        <option value="Boys" selected="@(Model.Category == "Boys")">Boys</option>
                        <option value="Girls" selected="@(Model.Category == "Girls")">Girls</option>
                    </select>
                </div>

                <div class="col-md-3 d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        Apply Filters
                    </button>
                </div>

            </form>
        </div>
    </div>

    <!-- Services -->
    @if (!Model.Services.Any())
    {
        <div class="text-center py-5">
            <h4 class="fw-semibold mb-2">No services found</h4>
            <p class="text-muted">
                Try adjusting your search or filters.
            </p>
        </div>
    }
    else
    {
        <div class="d-flex flex-column gap-4">

            @foreach (var service in Model.Services)
            {
                <div class="card border-0 shadow-sm service-card">

                    <div class="d-flex flex-column flex-md-row">

                        <!-- IMAGE -->
                        <img src="@(string.IsNullOrEmpty(service.ImagePath)
                                                                      ? "/images/placeholder-service.jpg"
                                                                      : service.ImagePath)"
                     alt="@service.Name"
                     style="width:100%; max-width:260px; height:180px; object-fit:cover;"
                     class="rounded-start" />

                        <!-- CONTENT -->
                        <div class="card-body d-flex flex-column flex-grow-1">

                            <div class="mb-2">
                                <span class="badge bg-secondary-subtle text-dark">
                                    @service.Category
                                </span>
                            </div>

                            <h5 class="fw-bold mb-1">@service.Name</h5>

                            <p class="text-muted mb-2">
                                Duration: <strong>@service.DurationMinutes min</strong>
                            </p>

                            <div class="mt-auto d-flex justify-content-between align-items-center">

                                <span class="fs-5 fw-bold text-primary">
                                    R @service.Price.ToString("0.00")
                                </span>

                                <a asp-page="/Bookings/Create"
                                   asp-route-serviceId="@service.Id"
                                   class="btn btn-success">
                                    Book Now
                                </a>
                            </div>

                        </div>

                    </div>

                </div>
                }

        </div>
    }
</div>

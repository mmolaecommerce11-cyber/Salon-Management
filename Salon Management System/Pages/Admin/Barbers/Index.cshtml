@page
@model Salon_Management_System.Pages.Admin.Barbers.IndexModel

@{
    ViewData["Title"] = "Manage Barbers";
}

<h1 class="mb-4">Manage Barbers</h1>

<a asp-page="Create" class="btn btn-primary mb-3">
    Add New Barber
</a>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var barber in Model.Barbers)
        {
            <tr>
                <td>@barber.FullName</td>
                <td>@barber.Email</td>
                <td>@barber.Phone</td>
                <td>@barber.IsActive</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@barber.Id"
                       class="btn btn-sm btn-warning">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

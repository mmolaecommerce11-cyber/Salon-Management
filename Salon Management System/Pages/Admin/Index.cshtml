@page
@model Salon_Management_System.Pages.Admin.IndexModel
@{
    Layout = "_AdminLayout";
}

<h1>Admin Dashboard</h1>
<p class="text-muted">System overview and management</p>

<div class="grid grid-4">

    <div class="card">
        <h3>Total Bookings</h3>
        <strong>@Model.TotalBookings</strong>
    </div>

    <div class="card">
        <h3>Pending Payments</h3>
        <strong>@Model.PendingPayments</strong>
    </div>

    <div class="card">
        <h3>Active Services</h3>
        <strong>@Model.ActiveServices</strong>
        <a asp-page="/Admin/Services/Index" class="btn btn-brand">
            Manage Services
        </a>
    </div>

    <div class="card">
        <h3>Active Barbers</h3>
        <strong>@Model.ActiveBarbers</strong>
        <a asp-page="/Admin/Barbers/Index" class="btn btn-brand">
            Manage Barbers
        </a>
    </div>

</div>

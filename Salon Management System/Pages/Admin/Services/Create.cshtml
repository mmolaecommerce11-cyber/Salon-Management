@page
@model Salon_Management_System.Pages.Admin.Services.CreateModel
@{
    Layout = "_AdminLayout";
}

<h1>Add New Service</h1>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Service.Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <select asp-for="Service.Category" class="form-select" required>
            <option value="Men">Men</option>
            <option value="Women">Women</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Duration (minutes)</label>
        <input asp-for="Service.DurationMinutes" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Price (R)</label>
        <input asp-for="Service.Price" type="number" step="0.01" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Service Image</label>
        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="Service.IsActive" class="form-check-input" />
        <label class="form-check-label">Active</label>
    </div>

    <button class="btn btn-success">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

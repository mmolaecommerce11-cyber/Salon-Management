@page
@model Salon_Management_System.Pages.Admin.Services.IndexModel

@{
    ViewData["Title"] = "Manage Services";
}

<h1 class="mb-4">Manage Services</h1>

<a asp-page="Create" class="btn btn-primary mb-3">
    Add New Service
</a>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Duration</th>
            <th>Price</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model.Services)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Category</td>
                <td>@service.DurationMinutes min</td>
                <td>R @service.Price</td>
                <td>@service.IsActive</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@service.Id"
                       class="btn btn-sm btn-warning">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

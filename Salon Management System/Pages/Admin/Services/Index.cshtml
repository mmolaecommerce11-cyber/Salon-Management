@page
@model Salon_Management_System.Pages.Admin.Services.IndexModel
@{
    Layout = "_AdminLayout";
}

<h1 class="mb-3">Manage Services</h1>
<p class="text-muted mb-4">Create, edit, activate or deactivate salon services</p>

<a asp-page="Create" class="btn btn-success mb-4">
    + Add New Service
</a>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Duration</th>
            <th>Price</th>
            <th>Status</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var service in Model.Services)
        {
            <tr>
                <td style="width:90px">
                    <img src="@(service.ImagePath ?? "/images/placeholder-service.jpg")"
                         class="rounded"
                         style="width:70px;height:60px;object-fit:cover;" />
                </td>

                <td class="fw-semibold">@service.Name</td>
                <td>@service.Category</td>
                <td>@service.DurationMinutes min</td>
                <td>R @service.Price.ToString("0.00")</td>

                <td>
                    @if (service.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>

                <td class="text-end">
                    <a asp-page="Edit" asp-route-id="@service.Id"
                       class="btn btn-sm btn-primary">
                        Edit
                    </a>

                    <a asp-page="ToggleStatus" asp-route-id="@service.Id"
                       class="btn btn-sm btn-warning">
                        @(service.IsActive ? "Deactivate" : "Activate")
                    </a>

                    <a asp-page="Delete" asp-route-id="@service.Id"
                       class="btn btn-sm btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - The Salon</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
          rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <div class="app-shell">

        <!-- SIDEBAR -->
        <aside class="sidebar">

            <div class="sidebar-brand">
                The Salon
            </div>

            <!-- MAIN NAV -->
            <nav class="sidebar-nav">
                <a asp-page="/Index">Home</a>
                <a asp-page="/Services/Index">Services</a>
                <a asp-page="/Bookings/MyBookings">My Bookings</a>

                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                {
                    <div class="sidebar-section">Admin</div>
                    <a asp-page="/Admin/Index">Dashboard</a>
                    <a asp-page="/Admin/Services/Index">Manage Services</a>
                    <a asp-page="/Admin/Barbers/Index">Manage Barbers</a>
                    <a asp-page="/Admin/Bookings/Index">Manage Bookings</a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-page="/Account/Settings" title="Settings">⚙ Settings</a>
                    }

                    <b></b>

                }
            </nav>

            <!-- AUTH SECTION (BOTTOM) -->
            <div class="sidebar-auth">

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="user-info">
                        <div class="user-name">
                            @User.Identity.Name
                        </div>

                        <form asp-area="Identity"
                              asp-page="/Account/Logout"
                              method="post">
                            <button type="submit" class="btn btn-outline w-100">
                                Logout
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <a asp-area="Identity"
                       asp-page="/Account/Login"
                       class="btn btn-brand w-100 mb-2">
                        Login
                    </a>

                    <a asp-area="Identity"
                       asp-page="/Account/Register"
                       class="btn btn-outline w-100">
                        Register
                    </a>
                }

            </div>

        </aside>

        <!-- CONTENT -->
        <main class="app-content">
            @RenderBody()
        </main>

    </div>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        (function () {
            const storedTheme = localStorage.getItem("theme");
            const systemDark = window.matchMedia("(prefers-color-scheme: dark)").matches;

            const theme = storedTheme
                ? storedTheme
                : systemDark
                    ? "dark"
                    : "light";

            document.documentElement.setAttribute("data-theme", theme);
        })();
    </script>


</body>
</html>
